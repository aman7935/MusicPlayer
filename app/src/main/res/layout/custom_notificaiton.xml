<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="8dp"
    android:backgroundTint="@color/page_background"
    android:gravity="center_vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/notification_album_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/music_dashboard_svgrepo_com" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/notification_title"
            android:text="Song Title"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="13dp"
            android:maxLines="1"
            android:textColor="@color/lightBlueColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageButton
            android:id="@+id/notification_prev"
        android:src="@drawable/previous_back_direction_svgrepo_com"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="34dp"
        android:layout_height="34dp"/>

    <ImageButton
        android:id="@+id/notification_play_pause"
        android:src="@drawable/pause_svgrepo_com"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="34dp"
        android:layout_height="34dp"/>

    <ImageButton
        android:id="@+id/notification_next"
        android:src="@drawable/next_svgrepo_com"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="34dp"
        android:layout_height="34dp"/>
</LinearLayout>
